  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "backend/src"
  },
  "include": ["backend/src/**/*.ts", "backend/src/db.ts"],
  "exclude": ["node_modules"]
}
